<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <% if current_user %>
    <div>
      <%= form_for [@product, Review.new] do |form| %>
        <%= form.label :rating %>
        <%= form.select(:rating, ['1', '2', '3', '4', '5']) %><br />

        <%= form.label :description %> <br>
        <%= form.text_area(:description, rows: 5, cols: 40) %><br />

        <%= form.submit %>
      <% end %>
    </div>
    <% end %>

    <div>
    <% @product.reviews.reverse.each do |review| %>
      <p><%= review.user.first_name + " " + review.user.last_name %></p>
      <p>Review: <%= review.description %></p>
      <p>Ratings: <%= review.rating %></p>
      <% if current_user == review.user %>
        <%= link_to fa_icon('trash'), review_path(review.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>


    <% end %>
    </div>
    <div>  
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    </div>
  </article>

</section>
